<% title "Packages" %>

<table>
  <tr>
    <th width="40%" align="left">Name</th>
    <th width="20%" align="left">Cost</th>
    <th align="left">Available Test</th>
    <th width="15%" align="left">Action</th>
  </tr>
  <% 
  	for package in @packages 
  	test_array = package.tests.collect(&:name)
  %>
    <tr>
      <td><%= package.name %></td>
      <td><%= package.cost %></td>
      <td><%= test_array.join(", ") %></td>
      <td><%= link_to "Show", package %>
      <%= link_to "Edit", edit_package_path(package) %>
      <%= link_to "Destroy", package, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Package", new_package_path %></p>
